pre_prompt_command() {
    version="1.0.0"
    entity=$(echo $(fc -ln -0) | cut -d ' ' -f1)
    [ -z "$entity" ] && return # $entity is empty or only whitespace
    $(git rev-parse --is-inside-work-tree 2> /dev/null) && local project="$(basename $(git rev-parse --show-toplevel))" || local project="Terminal"
    (~/.wakatime/wakatime-cli --write --plugin "bash-wakatime/$version" --entity-type app --project "$project" --entity "$entity" 2>&1 > /dev/null &)
}

function _preload() {
    EDITOR="$(config_get editor)"
    export LESS="-iMFXR"
    export PAGER="/usr/bin/less"
    export HISTIGNORE="&:ls:[bf]g:exit"
    export EDITOR

    bash_version="${BASH_VERSION/.*}"
    sys_locale="${LANG:-C}"
    # XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-${HOME}/.config}"
    XDG_CONFIG_HOME="${eb3_ConfPath}"
    PATH="${PATH}:/usr/xpg4/bin:/usr/sbin:/sbin:/usr/etc:/usr/libexec"
    export bash_version
    export sys_locale
    export XDG_CONFIG_HOME

    # enable color support of ls and also add handy aliases
    if [ -x /usr/bin/dircolors ]; then
        # if [ "$(test -r "${HOME}$(config_get dirSeparator).dircolors")" ]; then
        #     eval "$(dircolors -b "${HOME}$(config_get dirSeparator).dircolors")"
        # else
        #     eval "$(dircolors -b)"
        # fi
        alias ls='ls --color=auto'
        alias ll='ls -alFh --color=auto'
        alias la='ls -A --color=auto'
        alias l='ls -CF --color=auto'
        alias dir='dir --color=auto'
        alias grep='grep --color=auto'
        alias lt='du -sh --color=auto * | sort -h'
    fi

    alias q='exit'
    alias quit='exit'
    alias cls='clear'
    alias c='clear'
    alias h='history'
    alias k='kill'
    alias null='/dev/null'
    alias home='cd ~'
    alias root='cd $(config_get dirSeparator)'
    alias resetperms='sudo chmod -R a=r,u+w,a+X'
    alias nano="$(config_get editor)"
    alias v="$(config_get editor)"
    alias vi="$(config_get editor)"
    alias vim="$(config_get editor)"
    alias sysstart="systemctl start"
    alias sysrestart="systemctl restart"
    alias sysreload="systemctl reload"
    alias sysstop="systemctl stop"
    alias sysstatus="systemctl status"
    alias viewcode="highlight -O ansi --force "
    alias please='sudo $(history 2| head -n1 | sed "s/^ [0-9]\+ //")'

    PROMPT_COMMAND="pre_prompt_command; $PROMPT_COMMAND"
}

success "Loaded $(basename "${BASH_SOURCE}")" >> "${eb3_LogsPath}startup.log"