#!/usr/bin/env bash
# title					:Enhanced BASH v3
# description		:EBv3 Help System
# author				:Jessica Brown
# date					:2022-Dec-10
# version				:1.0.0
# usage					:ebhHelp
# notes					:by typing eb3help will display all of the modules, aliases,
#               :and functions eb3 has to offer
# bash_version  :5.1.16(1)-release
# ==============================================================================

eb3help() {
  echo -e "# +--------] EBv3 Help System [----------------------------------------------------------------------+"
  echo -e "# |                                                                                                  |"
  echo -e "# |   EBv3 stands for Extended BASH (Bourne Again Shell) version 3                                   |"
  echo -e "# |                                                                                                  |"
  echo -e "# |   File System          Data and Reference         String Manipulation         System             |"
  echo -e "# |       backup               systeminfo                 eb_trim_string             sysstart        |"
  echo -e "# |       dirjump              userlist                   eb_trim_all                sysrestart      |"
  echo -e "# |       empty                weather                    eb_regex                   sysstop         |"
  echo -e "# |       extract              viewcode                   eb_split                   sysstatus       |"
  echo -e "# |       inpath                                          eb_lower                   please          |"
  echo -e "# |       home             Logging System                 eb_upper                   sysfetch        |"
  echo -e "# |       root                 eb3log                     eb_reverse_case                            |"
  echo -e "# |       resetperms           taillog                    eb_trim_quotes          Interface System   |"
  echo -e "# |                            viewlog                    eb_strip                   choices         |"
  echo -e "# |                                                       eb_strip_all               cls | c | clear |"
  echo -e "# |                                                       eb_lstrip                  prettytable     |"
  echo -e "# |                                                       eb_rstrip                  start_spinner   |"
  echo -e "# |                                                       eb_urlencode               stop_spinner    |"
  echo -e "# |                                                       eb_urldecode                               |"
  echo -e "# +--------------------------------------------------------------------------------------------------+"
}