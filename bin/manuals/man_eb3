#!/usr/bin/env bash
# title					:Enhanced BASH v3
# description		:EBv3 Help System
# author				:Jessica Brown
# date					:2022-Dec-10
# version				:1.0.0
# usage					:ebhHelp
# notes					:by typing eb3help will display all of the modules, aliases,
#               :and functions eb3 has to offer
# bash_version  :5.1.16(1)-release
# ==============================================================================

eb3help() {
  printf "%b+--------%b] %bEBv3 Help System %b[%b----------------------------------------------------------------------+%b\n" "${Grey8}" "${txtReset}" "${CadetBlue}" "${txtReset}" "${Grey8}" "${txtReset}"
  printf "%b|                                                                                                  |%b\n" "${Grey8}" "${txtReset}"
  printf "%b|  %bEBv3 %b(%bExtended BASH version 3%b) is a modular approach for building easy to use scripts, aliases, %b|%b\n" "${Grey8}" "${Blue}" "${txtReset}" "${Grey8}" "${txtReset}" "${Grey8}" "${txtReset}"
  printf "%b|  %band prompts to allow users to quickly complete tasks from the command line. Each item listed    %b|%b\n" "${Grey8}" "${txtReset}" "${Grey8}" "${txtReset}"
  printf "%b|  %bbelow are made of of %bmodules%b, %blibraries%b, and %baliases %bwhich are color coded the same below.      %b|%b\n" "${Grey8}" "${txtReset}" "${Red}" "${txtReset}" "${DeepSkyBlue1}" "${txtReset}" "${Chartreuse1}" "${txtReset}" "${Grey8}" "${txtReset}"
  printf "%b|                                                                                                  %b|%b\n" "${Grey8}" "${Grey8}" "${txtReset}"
  printf "%b|  Modules and aliases are ran from the cli just like a program. Libraries can be ran from the     %b|%b\n" "${Grey8}" "${Grey8}" "${txtReset}"
  printf "%b|  command line but are intended to help with building BASH scripts.                               %b|%b\n" "${Grey8}" "${Grey8}" "${txtReset}"
  printf "%b|                                                                                                  %b|%b\n" "${Grey8}" "${Grey8}" "${txtReset}"
  printf "%b|   %bFile System          Data and Reference         String Manipulation         System             %b|%b\n" "${Grey8}" "${White}" "${Grey8}" "${txtReset}"
  printf "%b|     %bbackup               %bsysteminfo                 %beb_trim_string              %bsysstart         %b|%b\n" "${Grey8}" "${Red}" "${Red}" "${DeepSkyBlue1}" "${Chartreuse1}" "${Grey8}" "${txtReset}"
  printf "%b|     %bdirjump              %buserlist                   %beb_trim_all                 %bsysrestart       %b|%b\n" "${Grey8}" "${Red}" "${Red}" "${DeepSkyBlue1}" "${Chartreuse1}" "${Grey8}" "${txtReset}"
  printf "%b|     %bempty                %bweather                    %beb_regex                    %bsysstop          %b|%b\n" "${Grey8}" "${Red}" "${Red}" "${DeepSkyBlue1}" "${Chartreuse1}" "${Grey8}" "${txtReset}"
  printf "%b|     %bextract              %bviewcode                   %beb_split                    %bsysstatus        %b|%b\n" "${Grey8}" "${Red}" "${Red}" "${DeepSkyBlue1}" "${Chartreuse1}" "${Grey8}" "${txtReset}"
  printf "%b|     %binpath                                          %beb_lower                    %bplease           %b|%b\n" "${Grey8}" "${Red}" "${DeepSkyBlue1}" "${Chartreuse1}" "${txtReset}" "${Grey8}"
  printf "%b|     %bhome               %bLogging System               %beb_upper                    %bsysteminfo       %b|%b\n" "${Grey8}" "${Chartreuse1}" "${White}" "${DeepSkyBlue1}" "${Chartreuse1}" "${Grey8}" "${txtReset}"
  printf "%b|     %broot                 %beb3log                     %beb_reverse_case                              %b|%b\n" "${Grey8}" "${Chartreuse1}" "${Red}" "${DeepSkyBlue1}" "${txtReset}" "${Grey8}"
  printf "%b|     %bresetperms           %btaillog                    %beb_trim_quotes            %bInterface System   %b|%b\n" "${Grey8}" "${Chartreuse1}" "${Red}" "${DeepSkyBlue1}" "${White}" "${Grey8}" "${txtReset}"
  printf "%b|                          %bviewlog                    %beb_strip                    %bchoices          %b|%b\n" "${Grey8}" "${Red}" "${DeepSkyBlue1}" "${DeepSkyBlue1}" "${Grey8}" "${txtReset}"
  printf "%b|                                                     %beb_strip_all                %bcls %b| %bc %b| %bclear  %b|%b\n" "${Grey8}" "${DeepSkyBlue1}" "${Chartreuse1}" "${txtReset}" "${Chartreuse1}" "${txtReset}"  "${Chartreuse1}" "${Grey8}" "${txtReset}"
  printf "%b|                                                     %beb_lstrip                   %bprettytable      %b|%b\n" "${Grey8}" "${DeepSkyBlue1}" "${DeepSkyBlue1}" "${Grey8}" "${txtReset}"
  printf "%b|                                                     %beb_rstrip                   %bstart_spinner    %b|%b\n" "${Grey8}" "${DeepSkyBlue1}" "${DeepSkyBlue1}" "${Grey8}" "${txtReset}"
  printf "%b|                                                     %beb_urlencode                %bstop_spinner     %b|%b\n" "${Grey8}" "${DeepSkyBlue1}" "${DeepSkyBlue1}" "${Grey8}" "${txtReset}"
  printf "%b|                                                     %beb_urldecode                %bdrawscreen       %b|%b\n" "${Grey8}" "${DeepSkyBlue1}" "${DeepSkyBlue1}" "${Grey8}" "${txtReset}"
  printf "%b|                                                     %beb_sqeeze                                    %b|%b\n" "${Grey8}" "${DeepSkyBlue1}" "${Grey8}" "${txtReset}"
  printf "%b+--------------------------------------------------------------------------------------------------+%b\n\n" "${Grey8}" "${Grey8}"
}