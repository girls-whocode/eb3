# This will be my fun activity, let's recreate XTree Gold for Linux with all of
# its former glory!
trap 'refresh_screen' WINCH

function create_screen() {
    # clear_screen
    screen_size
    echo -en "Current Path: ${White}${PWD}${txtReset}"
    for ((c=(${#PWD}+14); c<columns; c++)); do
        echo -ne "${Grey} "
    done
    draw_border
}

function refresh_screen() {
    clear
    xtree
}

function exit_function() {
    clear_screen
    echo "Thank you for using, have a great day :)"
}

function dir_window() {
    row=2
    declare -a dir_list
    dir_list=(*/)
    for dir in "${dir_list[@]}"; do
        ((row++))
        cursorpos pos "${row}" 2
        echo -e "${Aqua}${dir}${txtReset}"
    done
}

function xtree() {
    cursorpos pos 0 0
    create_screen
    dir_window

    while true; do
        IFS=''
        read -r -s -N 1 -t .5 input

        case ${input} in
            $'\e') 
                exit_function;
                break;;
            *) 
                xtree;
                break;;
        esac
    done
}
